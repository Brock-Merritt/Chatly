<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie-edge">
        <title>CHATly</title>
        <link rel="stylesheet" href="css/secondary-styles.css">

    </head>
<body>
    <!-- navigation -->
    <div class="join-container">
			<header class="join-header">
				<h1> CHATly</h1>
			</header>
			<main class="join-main">
				<form action='/dashboard'>
                    <div class="nameInput">
                        <div class="field">
                            <label>Birthday</label>
                            <input type="text" placeholder="Your birthday?" name="birthday"
                            required />
                        </div>
                        <div class="field">
                            <label>Favorite Animal</label>
                            <input type="text" placeholder="Your favorite animal?"
                            required />
                        </div>
					<div class="field" id="favColor">
                        <label>Favorite Color</label>
                        <input type="text" placeholder="Your favorite color?"
                        required />
                    </div>
                    <div class="field">
                        <label>Favorite Food</label>
                        <input type="text" placeholder="Your favorite food?"
                        required />
                    </div>
					<button type="submit" class="btn">Enter Room!</button>
            </form>
        </section>
    </div>
</body>
</html>